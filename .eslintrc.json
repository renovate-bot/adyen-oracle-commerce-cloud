{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jasmine": true
  },
  "rules": {
    "max-len": ["error", {"code": 120}],
    "indent": ["error", 4],
    "complexity": ["error", 3],
    "prettier/prettier": "error",
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "ignorePatterns": ["spec.js", "__mocks__", "__tests__", "min.js"]
}